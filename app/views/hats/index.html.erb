<p id="notice"><%= notice %></p>

<h1>Hats</h1>

<table>
  <thead>
    <tr>
      <th>Style</th>
      <th>Material</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hats.each do |hat| %>
      <tr>
        <td><%= hat.style %></td>
        <td><%= hat.material %></td>
        <td><%= hat.color %></td>
        <td><%= link_to 'Show', hat %></td>
        <td><%= link_to 'Edit', edit_hat_path(hat) %></td>
        <td><%= link_to 'Destroy', hat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hat', new_hat_path %>
